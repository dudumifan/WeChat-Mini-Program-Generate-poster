page {
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.share-circle {
  height: 50vh;
  width: 100vw;
  position: absolute;
  bottom: 0;
  left: 0;
  text-align: center;
}

.share-circle-title {
  font-size: 70rpx;
  color: #232628;
  font-weight: 700;
  opacity: 0;
  animation: titleOpacity .8s ease;
  animation-fill-mode: forwards;
}
@keyframes titleOpacity {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.share-circle-main {
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
  padding: 0 30rpx;
}

.share-item {
  width: 50%;
  min-width: 140rpx;
  height: 200rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 32rpx;
  color: #232628;
  transform: translateY(800px) rotate(90deg);
}

.share-item text{
  line-height: 1;
}

.share-img{
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 25rpx;
}

.share-close {
  position: absolute;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
}
.share-close-img{
  width: 34rpx;
  height: 34rpx;
  padding: 20rpx;
}

.canvas-view{
  /* transform: translateX(9999px); */
}

@keyframes animation {
  0% {
    transform: translateY(800px) rotate(90deg);
    opacity: 0;
  }
  100% {
    opacity: 1;
    transform: translateY(0) rotate(0);
  }
}